{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AskTuring",
  "version": "0.1.0",
  "identifier": "ai.askturing.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "bubble",
        "title": "AskTuring",
        "url": "bubble",
        "width": 700,
        "height": 600,
        "resizable": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visible": false,
        "center": false,
        "transparent": true,
        "shadow": false
      },
      {
        "label": "login",
        "title": "AskTuring - Login",
        "url": "login",
        "width": 500,
        "height": 700,
        "resizable": false,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false,
        "center": true,
        "transparent": false,
        "shadow": true
      },
      {
        "label": "main",
        "title": "AskTuring",
        "url": "settings",
        "width": 800,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "visible": false,
        "center": true,
        "transparent": false,
        "shadow": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://auth.askturing.ai https://backend.prod.askturing.ai; style-src 'self' 'unsafe-inline'"
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["askturing"]
      }
    }
  }
}
